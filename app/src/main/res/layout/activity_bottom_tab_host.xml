<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@android:id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="39dp"
        android:background="@color/white" />

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/navigation_home"
            style="@style/RadioButton.Navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:checked="true"
            android:drawableTop="@drawable/icon_home"
            android:text="@string/title_home"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <RadioButton
            android:id="@+id/navigation_plus"
            style="@style/RadioButton.NavigationCenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_plus"
            android:text="Plus"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <RadioButton
            android:id="@+id/navigation_mine"
            style="@style/RadioButton.Navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:drawableTop="@drawable/icon_mine"
            android:text="Mine"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />
    </RadioGroup>

</TabHost>