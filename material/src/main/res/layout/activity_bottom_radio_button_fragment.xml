<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomNavigationBarSize"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_tiny"
        android:paddingBottom="@dimen/margin_tiny">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/navigation_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/ic_home_black_24dp"
            android:drawablePadding="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/title_home"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/navigation_dashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/ic_dashboard_black_24dp"
            android:drawablePadding="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/title_dashboard"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/navigation_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:button="@null"
            android:drawableTop="@drawable/ic_notifications_black_24dp"
            android:drawablePadding="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/title_notifications"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small" />
    </RadioGroup>

</LinearLayout>